server {
    root /home/vagrant/www/innbativel/public;

    index index.php index.html index.htm app.php app.html app.htm default.php default.html default.htm;

    server_name innbativel.dev;

    access_log /home/vagrant/www/innbativel/app/storage/logs/access.log;
    error_log  /home/vagrant/www/innbativel/app/storage/logs/error.log;

    charset utf-8;

    #open_file_cache          max=1000 inactive=20s;
    #open_file_cache_valid    30s;
    #open_file_cache_min_uses 2;
    #open_file_cache_errors   on;

    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    location /icecoder {
        try_files $uri $uri/ /index.php?$query_string;
    }

    location ~ ^/assets  {
        gzip_static on;
        expires max;
        add_header Cache-Control public;
        add_header Pragma public;
        log_not_found off;
    }

    # cache.appcache, your document html and data
    #location ~* \.(?:manifest|appcache|html?|xml|json)$ {
